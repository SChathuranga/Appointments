	<!-- Table -->
	<section>
		<div class="inner">
			<div class="col-md-6 limiter">
				<div>
					<!-- Table -->
					<h2>View Doctors</h2>

					<table>
						<thead>
							<tr>
								<th>Doctor's Name</th>
								<th>Address</th>
								<th>Contact #</th>
								<th>Email</th>
								<th>Speciality</th>
								<th>Doctor's Registration ID</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							<% if (data) { %>
								<% data.forEach(function(user){ %>
									<tr>
										<td>
											<%= user.doctorname %>
										</td>
										<td>
											<%= user.address %>
										</td>
										<td>
											<%= user.contact %>
										</td>
										<td>
											<%= user.email %>
										</td>
										<td>
											<%= user.speciality %>
										</td>
										<td>
											<%= user.docregid %>
										</td>
										<td>
											<input type="button" value="Edit" onclick="document.getElementById('doctor_edit<%= user.id %>').click()">
											<a class="hidden">Edit</a>

											<input type="button" value="Delete" onclick="confirm('Are you sure you want to delete?') && document.getElementById('delete_form<%= user.id %>').submit()">
											<form style="display:none" id="delete_form<%= user.id,  %>" method="post" action="/deletedoctor/<%= user.id %>"></form>
										</td>
									</tr>
								<% }) %>
							<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
