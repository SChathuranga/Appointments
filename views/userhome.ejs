    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript" src="js/typeahead.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("input[name*='institute']").typeahead({
                name: 'countries',
                remote: 'http://localhost:8080/search?key=%QUERY',
                limit: 10
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("input[name*='doctor']").typeahead({
                name: 'doctors',
                remote: 'http://localhost:8080/finddoctor?key=%QUERY',
                limit: 10
            });
        });

        $(document).ready(function () {
            $("input[name*='speciality']").typeahead({
                name: 'specialities',
                remote: 'http://localhost:8080/findbyspeciality?key=%QUERY',
                limit: 10
            });
        });
    </script>
    <style type="text/css">
        .bs-example {
            font-family: sans-serif;
            position: relative;
            margin: 50px;
        }

        .typeahead,
        .tt-query,
        .tt-hint {
            border: 2px solid #CCCCCC;
            border-radius: 8px;
            font-size: 24px;
            height: 30px;
            line-height: 30px;
            outline: medium none;
            padding: 8px 12px;
            width: 396px;
        }

        .typeahead {
            background-color: #FFFFFF;
        }

        .typeahead:focus {
            border: 2px solid #0097CF;
        }

        .tt-query {
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        }

        .tt-hint {
            color: #999999;
        }

        .tt-dropdown-menu {
            background-color: #FFFFFF;
            border: 1px solid rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
            margin-top: 12px;
            padding: 8px 0;
            width: 422px;
        }

        .tt-suggestion {
            font-size: 24px;
            line-height: 24px;
            padding: 3px 20px;
        }

        .tt-suggestion.tt-is-under-cursor {
            background-color: #0097CF;
            color: #FFFFFF;
        }

        .tt-suggestion p {
            margin: 0;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header id="header">
        <a class="logo" href="index.html">eChanneling</a>
        <nav>
            <a href="#menu">Menu</a>
        </nav>
    </header>
    
    <!-- Nav -->
    <nav id="menu">
        <ul class="links">
            <li>
                <a href="/myappointments">My Appointments</a>
            </li>
            <li>
                <a href="/logout">Logout</a>
            </li>
        </ul>
    </nav>
    <form method="POST" action="/echanneling">
        <div class="page-header">
            <h1>E - Channeling</h1>
        </div>
        <div class="bs-example">
            <label name="institute">Search Institute</label>
            <input type="text" name="institute" class="typeahead tt-query" autocomplete="off" spellcheck="false" placeholder="Type your Query">
        </div>
        <div class="bs-example">
            <label name="Doctor">Search Doctor</label>
            <input type="text" name="doctor" class="typeahead tt-query" autocomplete="off" spellcheck="false" placeholder="Type your Query">
        </div>
        
        <div class="bs-example">
            <label name="Doctor">Search Specialized Field</label>
            <input type="text" name="speciality" class="typeahead tt-query" autocomplete="off" spellcheck="false" placeholder="Type your Query">
        </div>
        <div class="bs-example">
            <button type="submit">
                <i class="fa fa-search">Search</i>
            </button>
        </div>
    </form>
    <br><hr>
    <!-- Table -->
    <section>
        <div class="inner">
            <div class="col-md-6 limiter">
                <div>
                    <!-- Table -->
                    <h2>Available Appointments</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Institute Name</th>
                                <th>Address</th>
                                <th>Contact #</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data) { %>
                                <% data.forEach(function(user){ %>
                                    <tr>
                                        <td>
                                            <%= user.institutename %>
                                        </td>
                                        <td>
                                            <%= user.address %>
                                        </td>
                                        <td>
                                            <%= user.contact %>
                                        </td>
                                        <td>
                                            <input type="button" value="Delete" onclick="document.getElementById('institute_del_form<%= user.id %>').submit()">
                                            <form class="hidden" id="institute_del_form<%= user.id %>" method="post" action="/deleteinstitute/<%= user.id %>" style=""></form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } %>
                        </tbody>
                    </table>
    
                </div>
            </div>
        </div>
